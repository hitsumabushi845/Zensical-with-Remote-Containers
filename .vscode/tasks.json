{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "zensical-serve",
            "type": "shell",
            "isBackground": true,
            "command": "zensical serve",
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "^.*(Error|Except).*$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*Serving.*on.*",
                    "endsPattern": "Build started"
                }
            }
        },
        {
            "label": "zensical-stop",
            "type": "shell",
            "command": "${command:workbench.action.terminal.kill}"
        }
    ]
}
